#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

# define DEFAULT 0
# define NUM 1
# define NAV 2
// # define BTL 3

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <125>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };
    
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// | TAB  |  Q   |  W  |  F  |  P  |   B  |        |  J  |  L  |  U  |  Y  |  '  | (NAV) DEL |
// | ALT  |  A   |  R  |  S  |  T  |   G  |        |  M  |  N  |  E  |  I  |  O  |     ;     |
// | CTRL |  Z   |  X  |  C  |  D  |   V  |        |  K  |  H  |  ,  |  .  |  /  | gui(ESC)  |
//        | Home |   (NAV) BSPC    | SHFT |        | RET |    (NUM) SPC    | End |
                        bindings = <
   &kp TAB   &kp Q &kp W &kp F &kp P &kp B        &kp J &kp L &kp U     &kp Y   &kp SQT  &kp lt NAV DEL
   &kp LALT  &kp A &kp R &kp S &kp T &kp G        &kp M &kp N &kp E     &kp I   &kp O    &kp SEMI
   &kp LCTRL &kp Z &kp X &kp C &kp D &kp V        &kp K &kp H &kp COMMA &kp DOT &kp FSLH &hm LGUI ESC
           &kp HOME &lt NAV BSPC &kp LSHFT        &kp RET &lt NUM SPACE &kp END
                        >;
                };

                number_layer {
// -----------------------------------------------------------------------------------------
// | x | 1 | 2 | 3 | 4 | 5 |        | 6 | 7 | 8 | 9 | 0 | ` |
// | x | < | [ | { | ( | @ |        | $ | ) | } | ] | > | ~ |
// | x | % | & | ^ | ! | + |        | - | = | * | # | \ | x |
//             |   |   |   |        |   |   |   |
                        bindings = <
   &trans  &kp N1   &kp N2    &kp N3    &kp N4     &kp N5         &kp N6     &kp N7    &kp N8   &kp N9    &kp N0   &kp GRAVE
   &trans  &kp LT   &kp LBKT  &kp LBRC  &kp LPAR   &kp AT         &kp DOLLAR &kp RPAR  &kp RBRC &kp RBKT  &kp GT   &kp TILDE  
   &trans  &kp PRCNT &kp AMPS &kp CARET &kp EXCL &kp PLUS         &kp MINUS  &kp EQUAL &kp STAR &kp POUND &kp BSLH &trans  
                                &trans    &trans   &trans         &trans     &trans    &trans
                        >;
                };
                navigation_layer {
// -----------------------------------------------------------------------------------------
// |   | BT1 | BT2 | BT3 |     |       |        |     |     |  UP |     |     |        |
// |   |     |     |     |     |       |        |     | LFT | DWN | RGT |     |        |
// |   |     |     | USB |  BT | BTCLR |        |     |     |     |     |     | ALT+F4 |
//                 |     |     |       |        |     |     |     |
                        bindings = <
    &trans &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &trans         &trans             &none  &none    &kp UP   &none     &none   &none
    &trans &none        &none        &none        &none          &none              &none  &kp LEFT &kp DOWN &kp RIGHT &none   &none
    &trans &none        &none        &out OUT_USB &out OUT_BLE   &bt BT_CLR         &none  &none    &none    &none     &none   &kp LA(F4)
                                                       &trans &trans &trans         &trans &trans   &trans
                        >;
                };
        };
};